
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @listing.image.url %>
      <p>This venue has the following equipment </p>
    
    <p>Projectors: <%= @listing.projector %></p>
    <p>Cables: <%= @listing.cables %></p>
    <p>Laptops: <%= @listing.laptops %></p>
    <p>Seating: <%= @listing.seating %></p>
    <p>Blinds: <%= @listing.blinds %></p>
    <p>Lighting:<%= @listing.lighting %></p>
    <p>Camcorder<%= @listing.camcorder %></p>
    <p>Catering:<%= @listing.catering %></p>
    <p>Toilets: <%= @listing.toilets %></p>
    <p>Fire exits:<%= @listing.fire %></p>
    <p>Wifi:<%= @listing.internet %></p>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @listing.title%></h3>
    <p>Start Time: <%= @listing.time %> & Date<%= @listing.date %></p>
    <p>Ticket Price:<%= @listing.price %></p>
    <p>Seats <%= @listing.seats %></p>
    <p>Venue Name: <%= @listing.venue_name %></p>
    <p>Location: <%= @listing.location %></p>
    <p>Any Additional Information: <%= @listing.additional_info %></p>
    <div class="center">
      <%= link_to "Buy It Now", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true } %>
    </div>
  </div>
</div>

<% if current_user == @listing.user %>
    <%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-link" %>

