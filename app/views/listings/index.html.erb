

<div class="page-header">
  <h1>Open Cinema  <small></small></h1>
</div>


<div class="row">
 
  <div class="col-md-6">
    <div class="thumbnail">
      <% @listings.each do |listing| %>
      <%= link_to image_tag(listing.image.url), listing %>
    </div>


  <div class="col-md-6">
      <div class="caption">
        <h2>Venue Name: <%= listing.venue_name %></h2>
        <h3>Next Screening: <%= listing.title %> <i class="fa fa-film"></i></h3>
        <h3>Venue Manager: <%= listing.user.name %></h3>
        <h3><b><i class="fa fa-clock-o"></i><%= listing.time %> | <i class="fa fa-calendar"></i> <%= listing.date %> | <i class="fa fa-ticket"></i><%= number_to_currency(listing.price, unit: "Â£") %></b></h3>
       
        <h3><%= print_tickets(listing.tickets) %></h3>


  


        <p><%= link_to 'I WANT THIS!', new_listing_path, class: "btn btn-danger btn-block" %>
        <p><%= link_to 'GET DETAILS', listing, class: "btn btn-primary btn-block" %> 
      </div>
  </div>
  <% end %>
</div>




<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>



