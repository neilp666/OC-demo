
<div class="jumbotron">
  <h1> Welcome to Open Cinema</h1>
</div>

<div class="row">
  <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
           <%= link_to image_tag(listing.image.url), listing %>
          <div class= "caption">
              <h3><%= listing.title %></h3>
              <h3><%= listing.user.name %></h3>
              <p>Ticket Price: <%= number_to_currency(listing.price) %></p>
              <p>Time:<%= listing.time %> & Date <%= listing.date %></p>
              <p>Location: <%= listing.location %></p>
          </div>
        </div>
      </div>
  <% end %>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>
